@model DogModel


@if(Model == null)
{
	<h1>Dog not found</h1>
}
else
{
	<img src="~/images/@Model.Image" style="width: 200px"/>
	

	<div><label>Name: <span>@Model.Name</span></label></div>
	<div><label>Favorite Food: <span>@Model.FavFood</span></label></div>
	<div><label>Favorite Toy: <span>@Model.FavToy</span></label></div>
	<div><label>Temperament: <span>@Model.Temperament</span></label></div>
	<div><label>Cuteness: <span>@Model.Cuteness</span></label></div>
	@if (Model.IsAdopted)
	{
		<h3>This dog found a happy home</h3>
	}
	else
	{
		<br />
		<a class="btn btn-primary" asp-controller="Dogs" asp-action="Adopt" asp-route-id="@Model.Id">Adopt Dog</a>
	}

}
<a asp-controller="Dogs" asp-action="Index">Back to all dogs.</a>